{
  "name": "Music Anywhere",
  "version": "1.0",
  "description": "A Chrome extension for taking your music listening session from one streaming service to another.",
  "permissions": ["activeTab", "declarativeContent", "storage" ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/tiburcio.png",
      "32": "images/brodilov.png"
    }
  },
  "icons": {
    "16": "images/tiburcio.png",
    "32": "images/brodilov.png"
  },
  "manifest_version": 2
}